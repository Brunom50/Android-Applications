<resources>

    <style name="WidgetBackground">
        <item name="android:background">@drawable/widget_bg</item>
    </style>
    <style name="WidgetBackgroundMessage">
        <item name="android:background">@drawable/widget_bg_message</item>
    </style>
    
    <style name="Text">
    </style>
    
    <style name="Text.Loading">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/black</item>
    	<item name="android:textStyle">bold|italic</item>
    </style>
    
    <style name="Text.WidgetTextSerif">
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@android:color/black</item>
    	<item name="android:textStyle">bold</item>
	</style>
    
    <style name="Text.WidgetTextSans">
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/black</item>
    	<item name="android:textStyle">bold</item>
	</style>
    
    <style name="Text.WidgetTextMonospace">
        <item name="android:textSize">13sp</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textColor">@android:color/black</item>
    	<item name="android:textStyle">bold</item>
	</style>
    	
