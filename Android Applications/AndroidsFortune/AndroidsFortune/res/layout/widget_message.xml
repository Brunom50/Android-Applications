<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/widget" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:focusable="true"
	android:scrollbars="none" style="@style/WidgetBackgroundMessage"
	android:fadingEdge="vertical">

	<TextView android:id="@+id/message" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:includeFontPadding="true"
		android:lineSpacingMultiplier="0.9"
		android:layout_alignParentLeft="true" android:layout_alignParentTop="true"
		android:padding="2dip"
		android:paddingRight="5dip"
		android:paddingLeft="5dip" 
        android:text="@string/widget_loading"
        style="@style/Text.Loading" />
	<ImageView android:id="@+id/watermark" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@id/message"
		android:layout_marginTop="2dip" android:src="@drawable/cookie"
		android:tint="#aaff0000"
    	android:minWidth="30dip"
    	android:minHeight="30dip"/>
</RelativeLayout>
