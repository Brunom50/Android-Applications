<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/appearance_" >

    <ListPreference
        android:defaultValue="light"
        android:entries="@array/themes"
        android:entryValues="@array/themes_values"
        android:key="theme"
        android:title="@string/theme_" />

    <EditTextPreference
        android:inputType="number"
        android:key="textsizen"
        android:summary="@string/textsize_hint"
        android:title="@string/textsize_" />

    <CheckBoxPreference
        android:key="hide_cancel_button"
        android:summary="@string/hide_cancel_button_hint"
        android:title="@string/hide_cancel_button" />
    <CheckBoxPreference
        android:key="hide_extras_button"
        android:summary="@string/hide_extras_button_hint"
        android:title="@string/hide_extras_button_" />
    <CheckBoxPreference
        android:key="hide_emo_button"
        android:summary="@string/hide_emo_button_hint"
        android:title="@string/hide_emo_button" />
    <CheckBoxPreference
        android:key="hide_select_recipients_button"
        android:summary="@string/hide_select_recipients_button_hint"
        android:title="@string/hide_select_recipients_button_" />
    <CheckBoxPreference
        android:key="hide_clear_recipients_button"
        android:summary="@string/hide_clear_recipients_button_hint"
        android:title="@string/hide_clear_recipients_button_" />
    <CheckBoxPreference
        android:key="hide_bg_connector"
        android:summary="@string/hide_bg_connector_hint"
        android:title="@string/hide_bg_connector_" />
    <CheckBoxPreference
        android:key="mobiles_only"
        android:summary="@string/mobile_only_hint"
        android:title="@string/mobile_only_" />
    <CheckBoxPreference
        android:key="hide_paste"
        android:summary="@string/hide_paste_hint"
        android:title="@string/hide_paste_" />
    <CheckBoxPreference
        android:key="show_balance_toast"
        android:summary="@string/show_balance_toast_hint"
        android:title="@string/show_balance_toast_" />

    <ListPreference
        android:entries="@array/lang_"
        android:entryValues="@array/lang_values"
        android:key="morelocale"
        android:summary="@string/custom_language_hint"
        android:title="@string/custom_language_" />

</PreferenceScreen>